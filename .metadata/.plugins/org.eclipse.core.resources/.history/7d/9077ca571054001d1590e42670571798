CREATE DATABASE myChat;

USE myChat;

CREATE TABLE tblRegister(
	id VARCHAR(20) PRIMARY KEY,
	pwd VARCHAR(20) NOT NULL,
	NAME VARCHAR(20) NOT NULL,
	regdate DATETIME DEFAULT NOW()
);

